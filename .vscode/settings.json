{
  // ========== 文件嵌套 ==========
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "*.axaml": "${capture}.axaml.cs",
    "*.xaml": "${capture}.xaml.cs",
    "*.cs": "${capture}.*.cs, ${capture}.Designer.cs, ${capture}.g.cs",
    //   "*.csproj": "*.csproj.user, *.csproj.nuget.*, obj, bin, project.assets.json, project.nuget.cache",
    "*.sln": "*.sln.DotSettings, *.sln.DotSettings.user, .editorconfig"
  },
  // ========== AXAML/XAML 配置 ==========
  "files.associations": {
    "*.axaml": "xml",
    "*.xaml": "xml"
  },
  // ========== C# 配置 ==========
  "csharp.semanticHighlighting.enabled": true,
  "csharp.suppressDotnetRestoreNotification": true,
  // ========== 格式化 ==========
  "[csharp]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "[xml]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "DotJoshJohnson.xml"
  },
  // ========== 编辑器体验 ==========
  "editor.minimap.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.inlayHints.enabled": "on",
  // ========== 排除文件 ==========
  "files.exclude": {
    "**/bin": true,
    "**/obj": true,
    "**/.vs": true
  },
  "bypassPermissions": true,
  "defaultMode": "bypassPermissions",
  // editor
  "editor.tabSize": 4,
  "editor.detectIndentation": false,
  "editor.cursorBlinking": "expand",
  "editor.guides.bracketPairs": "active",
  "editor.inlineSuggest.enabled": true,
  "editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?",
  // 在使用搜索功能时，将这些文件夹/文件排除在外
  "search.exclude": {
    "**/node_modules": true,
    "**/*.log": true,
    "**/*.log*": true,
    "**/bower_components": true,
    "**/dist": true,
    "**/elehukouben": true,
    "**/.git": true,
    "**/.github": true,
    "**/.gitignore": true,
    "**/.svn": true,
    "**/.DS_Store": true,
    "**/.vitepress/cache": true,
    "**/.idea": true,
    "**/.vscode": false,
    "**/.yarn": true,
    "**/tmp": true,
    "*.xml": true,
    "out": true,
    "dist": true,
    "node_modules": true,
    "**/pnpm-lock.yaml": true,
    "**/yarn.lock": true
  },
  // 控制相关文件嵌套展示
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "*.ts": "$(capture).test.ts, $(capture).test.tsx, $(capture).spec.ts, $(capture).spec.tsx, $(capture).d.ts",
    "*.tsx": "$(capture).test.ts, $(capture).test.tsx, $(capture).spec.ts, $(capture).spec.tsx,$(capture).d.ts",
    "*.env": "$(capture).env.*",
    "README.md": "README*,CHANGELOG*,LICENSE,CNAME",
    "package.json": "pnpm-lock.yaml,pnpm-workspace.yaml,.gitattributes,.gitignore,.gitpod.yml,.npmrc,.browserslistrc,.node-version,.git*,.tazerc.json,package-lock.json",
  },
}